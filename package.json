{
  "name": "static-blog-generator-hexo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "prestart": "run-s build:chimera copy",
    "start": "yarn server",
    "build": "run-s build:*",
    "build:chimera": "cd multisite/chimeraland && yarn build",
    "build:post": "yarn copy",
    "build:site": "hexo generate",
    "copy": "sbg post copy",
    "clean": "gulp clean",
    "deploy": "gulp deploy",
    "server": "hexo server -p 4000",
    "server-php": "php -S localhost:4000 -t public",
    "update:postinstall": "curl -L https://github.com/dimaslanjaka/nodejs-package-types/raw/main/postinstall.js > postinstall.js",
    "update:chimeraland": "cd multisite/chimeraland/chimeraland && yarn update",
    "update:chimeraland2": "cd multisite/chimeraland && yarn update",
    "update:ncu": "npm-check-updates -u",
    "update": "run-s update:* && npm install",
    "postupdate": "node postinstall.js --commit --yarn",
    "refresh": "rimraf package-lock.json && npm update hexo-front-matter hexo-browsersync hexo-generator-redirect static-blog-generator safelinkify hexo-post-parser"
  },
  "hexo": {
    "version": "6.3.0"
  },
  "dependencies": {
    "hexo": "^6.2.0",
    "hexo-asset-link": "^2.2.1",
    "hexo-browsersync": "https://github.com/hexojs/hexo-browsersync/tarball/master",
    "hexo-excerpt": "^1.3.0",
    "hexo-extend-injector2": "^0.3.1",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-index": "^3.0.0",
    "hexo-generator-json-content": "^4.2.3",
    "hexo-generator-searchdb": "^1.4.1",
    "hexo-generator-tag": "^2.0.0",
    "hexo-i18n": "^2.0.0",
    "hexo-pagination": "^3.0.0",
    "hexo-pdf": "^1.1.1",
    "hexo-renderer-marked": "^6.0.0",
    "hexo-renderer-stylus": "^2.1.0",
    "hexo-server": "^3.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1"
  },
  "workspaces": [
    "multisite/chimeraland",
    "multisite/chimeraland/chimeraland",
    "themes/next",
    "packages/hexo-github-card",
    "packages/hexo-generator-redirect",
    "packages/sitemap-crawler",
    "packages/gulp-dom",
    "packages/hexo-seo",
    "packages/@types/*",
    "packages/instant-indexing"
  ]
}
