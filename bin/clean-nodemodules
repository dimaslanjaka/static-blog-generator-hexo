#!/usr/bin/env bash

#sh -c 'rm -rf node_modules/a* & wait'

rm -rf node_modules/@* &
rm -rf node_modules/.* &
rm -rf yarn.lock &
rm -rf package-lock.json &

#for letter in {{a..z},{A..Z}}; do
for letter in {{a..z}}; do
  loc="node_modules/${letter}*"
  echo "deleting ${loc}"
  rm -rf $loc &
done

wait